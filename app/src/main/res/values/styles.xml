<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Vizz.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/selector_button_bg</item>
        <item name="android:textColor">@color/bright_white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">56dp</item>
        <item name="rippleColor">@color/ripple_material_light</item>
        <item name="android:textAppearance">@font/helvetica</item>
    </style>

    <style name="Widget.Vizz.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outline_stroke_color</item>
        <item name="android:textColorHint">@color/graphite_30</item>
        <item name="android:textColor">@color/navy_text</item>
        <item name="prefixTextColor">@color/navy_text</item>
        <item name="helperTextTextColor">@color/navy_text</item>
        <item name="hintTextColor">@color/navy_text</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeErrorColor">@color/orange</item>
    </style>

    <style name="ShapeAppearanceOverlay.Vizz.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.Vizz.CornerSize14" parent="">
        <item name="cornerSize">14dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Widget.Vizz.Text" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/green</item>
    </style>
</resources>